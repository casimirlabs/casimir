{
  "name": "casimir-web",
  "version": "1.0.0-beta.4",
  "description": "Casimir self-custodial restaking platform",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint --ext .vue,.ts ./ --fix",
    "prepare": "husky install",
    "release": "release-it",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/casimirlabs/casimir-web.git"
  },
  "keywords": [
    "self-custody",
    "staking"
  ],
  "author": "Consensus Networks",
  "license": "Apache",
  "bugs": {
    "url": "https://github.com/casimirlabs/casimir-web/issues"
  },
  "homepage": "https://github.com/casimirlabs/casimir-web#readme",
  "dependencies": {
    "@casimirlabs/casimir-contracts": "^0.0.4",
    "@headlessui/vue": "^1.7.16",
    "@heroicons/vue": "^2.0.18",
    "@metamask/providers": "^17.1.2",
    "@vueuse/core": "^10.7.0",
    "@walletconnect/ethereum-provider": "^2.16.0",
    "buffer": "^6.0.3",
    "chart.js": "^4.4.4",
    "viem": "^2.21.2",
    "vue": "^3.3.8",
    "vue-chartjs": "^5.3.1",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/node": "^22.5.4",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "@vitejs/plugin-vue": "^4.5.0",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.3.1",
    "eslint": "^8.19.0",
    "eslint-plugin-vue": "^8.7.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "postcss": "^8.4.32",
    "release-it": "^15.6.0",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.22"
  },
  "lint-staged": {
    "*.{ts,vue}": "npm run lint"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "github": {
      "tagName": "v${version}",
      "releaseName": "v${version}",
      "release": true
    },
    "git": {
      "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs",
      "commitMessage": "Release v${version}"
    },
    "hooks": {
      "after:bump": "npx auto-changelog -p"
    }
  }
}
